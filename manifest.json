{
  "manifest_version": 3,
  "name": "OpenFront Extension",
  "version": "1.0",
  "description": "Extension Chrome pour améliorer l'expérience OpenFront.io",
  "permissions": [],
  "icons": {
    "192": "icon-192.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://openfront.io/*" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "custom-sam.png" ],
      "matches": [ "https://openfront.io/*" ]
    }
  ]
}
